<Project Sdk="Microsoft.NET.Sdk">

	<!--Common Project Properties-->
	<PropertyGroup>
		<TargetPlatformMinVersion>10.0</TargetPlatformMinVersion>
		<!--<TargetFrameworks>net6.0-windows10.0.22621.0;net7.0-windows10.0.22621.0;</TargetFrameworks>-->
		<TargetFrameworks>net7.0-windows10.0.22621.0;</TargetFrameworks>

		<Title>DXSharp</Title>
		<Version>$(VersionPrefix)</Version>
		<ApplicationIcon>DXSharp_ICON_512.ico</ApplicationIcon>
		<Description>A modern C#/.NET Core wrapper for native DirectX</Description>

		<Nullable>enable</Nullable>
		<AnalysisLevel>preview</AnalysisLevel>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWindowsForms>true</UseWindowsForms>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<DocumentationFile>$(RepoRootPath)doc\$(MSBuildProjectName).xml</DocumentationFile>
		<BaseIntermediateOutputPath>$(RepoRootPath)obj\$(MSBuildProjectName)\</BaseIntermediateOutputPath>

		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/atcarter714/DXSharp</RepositoryUrl>
		<PackageTags>interop; directx; wrapper; 2d; 3d; graphics; d3d; dxgi; win32; com; gamedev; arkaen;</PackageTags>
		<PackageIcon>DXSharp_Logo_00_512.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>

	</PropertyGroup>

	

	<!--Icons & Resources-->	

	<ItemGroup>
		<Content Include="DXSharp_ICON_512.ico" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\file\img\DXSharp_Logo_00_512.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>

		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>

		<Compile Remove="DXGI\xxhierarchy.cs" />
	</ItemGroup>



	<!--Package References-->

	<ItemGroup>
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.18-beta">
			<PrivateAssets>all</PrivateAssets>
			<!--<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>-->
		</PackageReference>

		<PackageReference Include="Microsoft.Windows.SDK.Win32Metadata" Version="53.0.14-preview" />
	</ItemGroup>


	<ItemGroup>
		<Compile Update="LibResources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>LibResources.resx</DependentUpon>
		</Compile>
	</ItemGroup>


	<ItemGroup>
		<EmbeddedResource Update="LibResources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>LibResources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>



	<!--<ItemGroup Condition="$(Configuration) != 'Release'">-->
	<ItemGroup>
		<!-- The name of the project that you want the Internal class to be visible To it -->
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>
				BasicTests, 
			</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>



	<!-- Remove files with features unsupported for .NET 6 -->
	<ItemGroup Condition="$(TargetFramework.StartsWith('net6.0'))">
		<Compile Remove="VectorDTypes.cs" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="Windows\Win32\XTensions\" />
	</ItemGroup>
	

</Project>