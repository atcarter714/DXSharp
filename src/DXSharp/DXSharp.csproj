<Project Sdk="Microsoft.NET.Sdk">
	<!--<TargetFrameworks>net6.0-windows10.0.22621.0;net7.0-windows10.0.22621.0;</TargetFrameworks>-->
	
	<!--Common Project Properties-->
	<PropertyGroup>
		<TargetPlatformMinVersion>10.0</TargetPlatformMinVersion>
		<TargetFrameworks>net7.0-windows10.0.22621.0;net8.0-windows10.0.22621.0;</TargetFrameworks>

		<Title>DXSharp</Title>
		<Version>$(VersionPrefix)</Version>
		<ApplicationIcon>DXSharp_ICON_512.ico</ApplicationIcon>
		<Description>A modern C#/.NET Core wrapper for native DirectX</Description>

		<Nullable>enable</Nullable>
		<AnalysisLevel>preview</AnalysisLevel>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWindowsForms>true</UseWindowsForms>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<DocumentationFile>$(RepoRootPath)doc\$(MSBuildProjectName).xml</DocumentationFile>
		<BaseIntermediateOutputPath>$(RepoRootPath)obj\$(MSBuildProjectName)\</BaseIntermediateOutputPath>

		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/atcarter714/DXSharp</RepositoryUrl>
		<PackageTags>interop; directx; wrapper; 2d; 3d; graphics; d3d; dxgi; win32; com; gamedev; arkaen;</PackageTags>
		<PackageIcon>DXSharp_Logo_00_512.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<Copyright>Copyright © Aaron T. Carter, Arkaen Solutions. All rights reserved.</Copyright>
		<PackageReleaseNotes>Early preview: NOT intended for production use! There are no guarantees or warranties (express or implied) of any kind: Use at your own risk!

(NOTE: There is nothing inherently "dangerous" about using these assemblies, but they may contain bugs, errors, glitches, etc which cause undefined and erratic behaviors which are very difficult (and time-consuming) to debug, track down and fix. This can cause significant use of your time and effort, and requires in-depth and adept (i.e., "advanced") skills and a lot of experience to be able to diagnose, fix/modify or otherwise work with low-level interop libraries (not to mention complex, low-level 3D rendering SDKs) such as this. Therefore, it could lead to investing a lot of time and effort into work which either doesn't get completed or takes far longer to complete than was expected/allowed! Such situations could cost people and companies money spent on production/labor time and other operational overheads, or lead to situations where deadlines cannot be met. This is to warn you that, at this time, these packages/libraries are NOT deemed "stable for production" and safe enough to rely upon for any important business purposes (other than R&amp;D, training, experiments, etc).</PackageReleaseNotes>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<AssemblyVersion>0.3.3</AssemblyVersion>
		<FileVersion>1.0.1</FileVersion>
	</PropertyGroup>
	
	
	<!-- Compiler Symbols & Configurations :: -->
	<PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
	  <DefineConstants>TRACE, DEBUG_COM, DEV_BUILD, CACHE_SIZE_NORMAL, __X64, _64BIT</DefineConstants>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
	  <DefineConstants>TRACE, DEV_BUILD, CACHE_SIZE_LARGE, __X64, _64BIT</DefineConstants>
	</PropertyGroup>
	
	
	<!-- Assets, Resources & Icons :: -->
	<ItemGroup>
		<Content Include="DXSharp_ICON_512.ico" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\..\file\img\DXSharp_Logo_00_512.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	
	
	<!-- Package References :: -->
	<ItemGroup>
		<!-- Win32Metadata Package -->
		<PackageReference Include="Microsoft.Windows.SDK.Win32Metadata" Version="[55.0.45-preview,)" />
		
		<!-- CsWin32 Generator -->
		<PackageReference Include="Microsoft.Windows.CsWin32" Version="[0.3.49-beta,)">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		
		<!-- DirectX Agility SDK Package -->
		<PackageReference Condition="$(UsingAgilitySDK)" Aliases="AgilitySDK" Include="Microsoft.Direct3D.D3D12" Version="[1.711.3-preview,)" GeneratePathProperty="true" >
			
		</PackageReference>
	</ItemGroup>
	
	
	<!-- Resource Design/Generation Options :: -->
	<ItemGroup>
		<Compile Update="LibResources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>LibResources.resx</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Update="LibResources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>LibResources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>
	
	
	<!-- Additional Item/Folder Inclusions :: -->
	<ItemGroup>
		<Folder Include="DXCore\Data\" />
		<Folder Include="Memory\" />
	</ItemGroup>
	
	
	<!-- Internal Visibility :: -->
	<ItemGroup>
		<!-- Here, DXSharp internals can be exposed to outside assemblies if required ... 
			 (For example, internals are already exposed to "BasicTests" unit testing assembly ... -->
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>
				BasicTests, 
			</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>
	<ItemGroup>
	  <None Remove="Resources\sdkconf.json" />
	  <AdditionalFiles Include="Resources\sdkconf.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </AdditionalFiles>
	</ItemGroup>
	
</Project>